# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/etcetera_exchange

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Bluesky Configuration
BLUESKY_IDENTIFIER=your_bot_account@bsky.social
BLUESKY_PASSWORD=your_app_password_here

# Web App Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://etcetera.exchange

# Bluesky OAuth (for web app login)
BLUESKY_CLIENT_ID=your_bluesky_oauth_client_id
BLUESKY_CLIENT_SECRET=your_bluesky_oauth_client_secret

# Railway Configuration (set automatically in Railway)
PORT=3000
NODE_ENV=production

# Optional: Image hosting
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
# OR use Railway's static file serving